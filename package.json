{
  "name": "@trufnetwork/sdk-js",
  "version": "0.1.0",
  "description": "Truf Network SDK for JavaScript",
  "type": "module",
  "keywords": [
    "truf",
    "truflation",
    "sdk",
    "javascript",
    "typescript",
    "web3"
  ],
  "author": "",
  "files": [
    "dist"
  ],
  "license": "Apache-2.0",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/types/index.d.ts",
  "exports": {
    "node": {
      "require": "./dist/cjs/index.node.js",
      "import": "./dist/esm/index.node.js"
    },
    "browser": {
      "require": "./dist/cjs/index.browser.js",
      "import": "./dist/esm/index.browser.js"
    },
    "default": {
      "require": "./dist/cjs/index.js",
      "import": "./dist/esm/index.js"
    }
  },
  "sideEffects": false,
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "build": "tsx esbuild.ts",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "@kwilteam/kwil-js": "^0.7.3",
    "@truflation/tsn-sdk-js": "github:trufnetwork/sdk-js",
    "crypto-hash": "^3.1.0",
    "lodash": "^4.17.21",
    "monads-io": "^4.0.2"
  },
  "devDependencies": {
    "@types/lodash": "4.17.12",
    "@types/node": "18.18.1",
    "@typescript-eslint/eslint-plugin": "8.11.0",
    "@typescript-eslint/parser": "8.11.0",
    "disposablestack": "1.1.6",
    "esbuild": "0.24.0",
    "eslint": "9.13.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-import-resolver-alias": "1.1.2",
    "eslint-import-resolver-typescript": "3.6.3",
    "eslint-plugin-import": "2.31.0",
    "eslint-plugin-jest": "28.8.3",
    "eslint-plugin-prettier": "5.2.1",
    "eslint-plugin-simple-import-sort": "12.1.1",
    "eslint-plugin-unused-imports": "4.1.4",
    "ethers": "6.13.4",
    "glob": "11.0.0",
    "prettier": "3.3.3",
    "tsx": "^4.19.1",
    "typescript": "^5.6.3",
    "vite-plugin-plain-text": "1.4.2",
    "vitest": "^2.1.3"
  }
}
